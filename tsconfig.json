{
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2022",
    "module": "CommonJS",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "downlevelIteration": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "test",
    "**/*.test.ts"
  ]
}